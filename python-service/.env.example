# ============================================
# SYNCADS PYTHON MICROSERVICE - ENV VARIABLES
# ============================================
# Copie este arquivo para .env e preencha com suas credenciais
# ============================================

# ==========================================
# SERVER
# ==========================================
PORT=8000
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
WORKERS=4

# ==========================================
# CORS
# ==========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://syncads.com.br,https://www.syncads.com.br

# ==========================================
# SUPABASE
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# ==========================================
# OPENAI
# ==========================================
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ==========================================
# ANTHROPIC (CLAUDE)
# ==========================================
ANTHROPIC_API_KEY=sk-ant-your-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ==========================================
# GOOGLE GENERATIVE AI
# ==========================================
GOOGLE_API_KEY=your-google-api-key

# ==========================================
# GROQ
# ==========================================
GROQ_API_KEY=your-groq-api-key

# ==========================================
# COHERE
# ==========================================
COHERE_API_KEY=your-cohere-key

# ==========================================
# IMAGE GENERATION
# ==========================================
RUNWAY_API_KEY=your-runway-key
PIKA_API_KEY=your-pika-key
STABILITY_API_KEY=your-stability-key

# ==========================================
# WEB SEARCH
# ==========================================
SERPER_API_KEY=your-serper-key
BRAVE_SEARCH_API_KEY=your-brave-key

# ==========================================
# SCRAPING
# ==========================================
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_TIMEOUT=30
PLAYWRIGHT_HEADLESS=true

# ==========================================
# SHOPIFY
# ==========================================
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-secret
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_STORE_URL=your-store.myshopify.com

# ==========================================
# STRIPE
# ==========================================
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==========================================
# TWILIO
# ==========================================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# SENDGRID
# ==========================================
SENDGRID_API_KEY=SG.your-sendgrid-key

# ==========================================
# DATABASE (se necess√°rio)
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/syncads
REDIS_URL=redis://localhost:6379

# ==========================================
# STORAGE
# ==========================================
S3_BUCKET=syncads-files
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# ==========================================
# IMAGE OPTIMIZATION
# ==========================================
TINIFY_API_KEY=your-tinypng-key

# ==========================================
# MONITORING
# ==========================================
SENTRY_DSN=https://your-sentry-dsn
PROMETHEUS_ENABLED=false

# ==========================================
# RATELIMIT
# ==========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================================
# SECURITY
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_SCRAPING=true
ENABLE_ML=true
ENABLE_NLP=true
ENABLE_IMAGE_PROCESSING=true
ENABLE_PDF_GENERATION=true

# ==========================================
# EXTERNAL APIS
# ==========================================
REMOVE_BG_API_KEY=your-removebg-key
DEEPL_API_KEY=your-deepl-key

# ==========================================
# CACHE
# ==========================================
CACHE_TTL=3600
CACHE_ENABLED=true

# ==========================================
# PYTHON EXECUTOR
# ==========================================
PYTHON_EXECUTOR_TIMEOUT=60
PYTHON_EXECUTOR_MAX_MEMORY_MB=512
